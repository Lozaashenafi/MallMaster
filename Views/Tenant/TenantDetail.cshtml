@model MallMinder.Models.ViewModels.TenantDetailVM

<div class="col-md-12 col-xl-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title label-big text-success">Tenant Detail</h4>
            <div class="list-wrapper">
                <ul>
                    <li class="row">
                        <div class="col-md-4 label-medium text-info">Tenant Name </div>
                        <span class="col-md-8">@Model.TenantName</span>
                    </li>
                    <li class="row">

                        <div class="col-md-4 label-medium text-primary">Room</div>
                        <span class="col-md-8">@Model.Room - @Model.Floor</span>
                    </li>
                    <li class="row">
                        <div class="col-md-4 label-medium text-warning">Rent Type</div>
                        <span class="col-md-8">@Model.Type</span>
                    </li>
                    <li class="row">
                        <div class="col-md-4 label-medium text-danger">Rented Date</div>
                        <span class="col-md-8">@Model.RentedDate.ToShortDateString()</span>
                    </li>
                    <li class="row">
                        <div class="col-md-4 label-medium text-warning">Payment Status</div>
                        <span class="col-md-8">@Model.PaymentStatus</span>
                    </li>
                    <li class="row">
                        <div class="col-md-4 label-medium text-info">Release</div>
                        <span class="col-md-8">
                            <button data-bs-toggle="modal" data-bs-target="#deleteModal"
                                class="btn btn-inverse-danger btn-fw">Remove</button>
                        </span>
                    </li>
                    <li class="row">
                        <div class="col-md-9 label-medium text-info"></div>
                        <span class="col-md-3">
                            <a href="javascript:history.back()" class="badge badge-outline-info">Back</a>
                        </span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this room?
            </div>
            <div class="modal-footer">
                <form method="post" id="deleteRoomForm" asp-action="RemoveRent" asp-controller="Rent" method="post">
                    <input type="hidden" name="rentId" value="@Model.RentId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>

            </div>
        </div>
    </div>
</div>
<style>
    .label-big {
        font-size: 20px;
    }

    .label-medium {
        font-size: 16px;
        font-weight: 500;
    }

    .gap {
        gap: 25px;
    }
</style>
